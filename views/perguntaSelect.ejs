<%- include('partials/header.ejs') -%> 

<body>
    <%- include('partials/navbar.ejs') -%> 
    <div class="container">
       <hr>
       <h1><%- pergunta.titulo %> </h1>
       <p><%- pergunta.descricao %> </p>
       <hr>
       <h3>Responda</h3>
       <form method="POST" action="/responder">
        <label>Resposta</label>
        <textarea placeholder="Digite sua resposta" class="form-control" name="corpoDaResposta"></textarea> <br>
        <input type="hidden" name="pergunta" value="<%- pergunta.id %> ">
        <button type="submit" class="btn btn-primary">Responder</button>
       </form>
      
       <hr>
       <h3>Respostas</h3>
       <hr>
       
       <% respostas.forEach( respostas => { %>
        <br>
          <div class="card">
            <div class="card-body">
              <li><%= respostas.corpoDaResposta %></li>
            </div>
          </div>
        
       <% }) %> <br>
    </div>
</body>
<%- include('partials/footer.ejs') -%> 